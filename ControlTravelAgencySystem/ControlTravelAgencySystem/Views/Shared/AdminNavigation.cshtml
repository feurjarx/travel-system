@model ControlTravelAgencySystem.Models.ViewModels.AdminPanelPageView

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Панель управления</a>
    </div>

    <ul class="collapse nav navbar-nav navbar-collapse">
       
        <li class="@(Model.section == null || Model.section == "callouts" ? "active" : "")">
            <a href="/admin">Заявки</a>
        </li>

        @{ 
            string[] clientVacationSuggestions = { "tours", "hotels", "rooms" };
        }
        <li class="dropdown @(clientVacationSuggestions.Contains(Model.section) ? "active" : "")">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                
                @switch (Model.section)
                {
                    case "tours":
                        <span>Работа с турами</span>
                        break;
                    case "hotels":
                        <span>Работа с отелями</span>
                        break;
                    case "rooms":
                        <span>Работа с номерами</span>
                        break;
                    default:
                        <span>Отдых клиента</span>
                        break;
                }

                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li class="@(Model.section == "tours" ? "active" : "")">
                    <a href="/admin/index/tours">Туры</a>
                </li>
                <li class="@(Model.section == "hotels" ? "active" : "")">
                    <a href="/admin/index/hotels">Отели</a>
                </li>
                <li class="@(Model.section == "rooms" ? "active" : "")">
                    <a href="/admin/index/rooms">Номера</a>
                </li>
            </ul>
        </li>

        @{
            string[] clientTransportSuggestions = { "flights", "routes" };
        }
        <li class="dropdown @(clientTransportSuggestions.Contains(Model.section) ? "active" : "")">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

                @switch (Model.section)
                {
                    case "flights":
                        <span>Работа с авиарейсами</span>
                        break;
                    case "routes":
                        <span>Работа с трансферами</span>
                        break;
                    default:
                        <span>Транспорт клиента</span>
                        break;
                }

                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li class="@(Model.section == "flights" ? "active" : "")">
                    <a href="/admin/index/flights">Авиарейсы</a>
                </li>
                <li class="@(Model.section == "routes" ? "active" : "")">
                    <a href="/admin/index/routes">Трансферы</a>
                </li>
            </ul>
        </li>

        @{
            string[] clientEntertainmentSuggestions = { "excursion" };
        }
        <li class="dropdown @(clientEntertainmentSuggestions.Contains(Model.section) ? "active" : "")">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

                @switch (Model.section)
                {
                    case "excursion":
                        <span>Работа с экскурсиями</span>
                        break;
                    default:
                        <span>Развлечения клиента</span>
                        break;
                }

                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li class="@(Model.section == "excursion" ? "active" : "")">
                    <a href="/admin/index/excursions">Экскурсии</a>
                </li>
            </ul>
        </li>

        @if (Model.user.position == "директор")
        {
            <li class="@(Model.section == "employees" ? "active" : "")">
                <a href="/admin/index/employees">Сотрудники</a>
            </li>
        }

        <li>
            <a class="visible-xs" href="/">Клиент-зона
                <i class="fa fa-users"></i>
            </a>
        </li>

        <li class="visible-xs">
            <a href="/admin/logout">Выйти</a>
        </li>
    </ul>

    <ul class="nav navbar-nav pull-right hidden-xs">
        <li>
            <a href="/">Клиент-зона
                <i class="fa fa-users"></i>
            </a>
        </li>
        <li>
            <a href="/admin/logout">Выйти
                <i class="fa fa-sign-out"></i>
            </a>
        </li>
    </ul>
</nav>