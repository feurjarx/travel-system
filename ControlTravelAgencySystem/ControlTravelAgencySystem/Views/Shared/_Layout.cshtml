<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Styles/Spinner.css")
        @Styles.Render("~/Styles/Common.css")
        @Styles.Render("~/Content/font-awesome.min.css")
        @Styles.Render("~/Content/awesome-bootstrap-checkbox.css")

        @RenderSection("Styles", false)

        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/scripts/jquery-3.1.1.min.js")
        @Scripts.Render("~/scripts/bootstrap.min.js")
        @Scripts.Render("~/scripts/handlebars.min.js")
        @Scripts.Render("~/scripts/spinner.js")
        @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    </head>

    <body>
        <header>
            <div class="content-wrapper">
            </div>
        </header>
        <div id="body">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
            </div>
        </footer>    
    </body>
    
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/scripts/global.js")
</html>
