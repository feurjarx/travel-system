<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/Site.css")
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Styles/Spinner.css")
        @Styles.Render("~/Styles/Common.css")
        @Styles.Render("~/Content/font-awesome.min.css")
        @Styles.Render("~/Content/awesome-bootstrap-checkbox.css")
        @Styles.Render("~/Content/noty-animate.css")
        @Styles.Render("~/Content/bootstrap-datetimepicker.min.css")
        @Styles.Render("~/Content/hover-min.css")

        @RenderSection("Styles", false)

        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/scripts/jquery-3.1.1.min.js")
        @Scripts.Render("~/scripts/moment.min.js")
        @Scripts.Render("~/Scripts/moment-with-locales.min.js")
        @Scripts.Render("~/scripts/bootstrap.min.js")
        @Scripts.Render("~/scripts/bootstrap-datetimepicker.min.js")
        @Scripts.Render("~/scripts/handlebars.min.js")
        @Scripts.Render("~/scripts/spinner.js")
        @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
        @Scripts.Render("~/Scripts/jquery.noty.packaged.min.js")
        @Scripts.Render("~/Scripts/jquery.bootstrap-autohidingnavbar.min.js")
        
    </head>

    @{
        ViewBag.Admin = ViewBag.Admin != null && ViewBag.Admin;
        ViewBag.Session = Request.Cookies["session"] != null;
    }

    <body>
        <header>
            <div class="content-wrapper">

                @if (ViewBag.Admin && ViewBag.Session)
                {
                    @RenderPage("AdminNavigation.cshtml")
                }
                else
                {
                    @RenderPage("ClientNavigation.cshtml")
                }

            </div>
        </header>
        <div id="body">
            <section class="content-wrapper main-content clear-fix">
                <div class="container">
                    @RenderBody()
                </div>
            </section>
        </div>
        <footer class="flexbox">
            @if (!ViewBag.Admin)
            {
                <kbd class="content-wrapper text-center">
                    <i class="fa fa-copyright"></i> Команда разработчиков 8ИВТ-51 Будовских И. | Ребро И. | Яковенко Р.
                </kbd>
            }
        </footer>  
    </body>
    
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/scripts/global.js")
    <script type="text/javascript">
        $(".navbar-fixed-top").autoHidingNavbar();
    </script>
</html>
