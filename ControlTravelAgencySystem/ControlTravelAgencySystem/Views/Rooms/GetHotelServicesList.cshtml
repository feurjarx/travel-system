@model ControlTravelAgencySystem.Models.ViewModels.HotelServicesView

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Выберите дополнительную услугу(-и)</h2>
    </div>
    <div class="panel-body">
        <h3>Список дополнительных услуг</h3>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Добавить</th>                    
                    <th>Описание</th>
                    <th>Стоимость за минуту</th>
                    <th>Начало</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var viewItem in Model.HotelServicesViewItems)
                {
                    <tr>
                        <td>
                            <div class="checkbox">
                                <input type="checkbox" class="hotelservice-checkbox" checked="@viewItem.IsChecked" value="@viewItem.HotelServiceId" id="hotelservice-@(viewItem.HotelServiceId)-checkbox" />
                                <label for="hotelservice-@(viewItem.HotelServiceId)-checkbox"></label>
                            </div>
                        </td>
                        <td>
                            @viewItem.Description
                        </td>
                        <td>
                            @viewItem.CostPerMin руб.
                        </td>
                        <td>
                            @viewItem.StartingTime
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>