<div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">

        @{
            switch (@Request.Params.Get("callout_order_status"))
            {
                case "paid":
                    <span>Оплаченные заявки</span>
                    break;

                case "canceled":

                    <span>Оплаченные заявки</span>
                    break;

                case "pending":

                    <span>Заявки в ожидании</span>
                    break;

                case "expired":

                    <span>Просроченные заявки</span>
                    break;

                default:

                    <span>Фильтр по статусу</span>
                    break;
            }
        }

        <span class="caret"></span>
    </button>

    <ul class="dropdown-menu">
        <li class="@(Request.Params.Get("callout_order_status") == null || Request.Params.Get("callout_order_status") == "" ? "active" : "" )">
            
            @if (Request.Params.Get("is_predefined") != null)
            {
                <a href="?is_predefined=@Request.Params.Get("is_predefined")">Все</a>
            }
            else
            {
                <a href="?callout_order_status=">Все</a>
            }

        </li>
        <li class="@(Request.Params.Get("callout_order_status") == "paid" ? "active" : "" )">

            @if (Request.Params.Get("is_predefined") != null)
            {
                <a href="?callout_order_status=paid&is_predefined=@Request.Params.Get("is_predefined")">Оплаченые</a>
            }
            else
            {
                <a href="?callout_order_status=paid">Оплаченые</a>
            }

        </li>
        <li class="@(Request.Params.Get("callout_order_status") == "canceled" ? "active" : "" )">

            @if (Request.Params.Get("is_predefined") != null)
            {
                <a href="?callout_order_status=canceled&is_predefined=@Request.Params.Get("is_predefined")">Отмененные</a>
            }
            else
            {
                <a href="?callout_order_status=canceled">Отмененные</a>
            }

        </li>
        <li class="@(Request.Params.Get("callout_order_status") == "pending" ? "active" : "" )">
            
            @if (Request.Params.Get("is_predefined") != null)
            {
                <a href="?callout_order_status=pending&is_predefined=@Request.Params.Get("is_predefined")">В ожидании</a>
            }
            else
            {
                <a href="?callout_order_status=pending">В ожидании</a>
            }

        </li>
        <li class="@(Request.Params.Get("callout_order_status") == "expired" ? "active" : "" )">

            @if (Request.Params.Get("is_predefined") != null)
            {
                <a href="?callout_order_status=expired&is_predefined=@Request.Params.Get("is_predefined")">Истекшие</a>
            }
            else
            {
                <a href="?callout_order_status=expired">Истекшие</a>
            }

        </li>
    </ul>
</div>