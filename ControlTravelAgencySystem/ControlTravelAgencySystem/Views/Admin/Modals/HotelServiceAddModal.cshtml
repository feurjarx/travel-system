@model ControlTravelAgencySystem.Models.ViewModels.AdminPanelPageView
@using ControlTravelAgencySystem.Models

<form class="modal add-entity-modal fade" id="hotel-service-modal" tabindex="-1" role="dialog"
      data-entity="hotel_service" 
      data-create-url="/hotelServices/create"
      data-edit-url="/hotelServices/edit">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Добавление платной услуги
                    <label class="error-label bg-danger"></label>
                </h4>
            </div>

            <div class="modal-body">

                <div class="input-group form-group">
                    <span class="input-group-addon">Отель:</span>
                    <select class="form-control" name="hotel_id">
                        @foreach (hotel h in Model.hotels)
                        {
                            <option value="@h.id">@h.name</option>
                        }
                        <option value="">Отсутствует</option>
                    </select>
                </div>

                <div class="input-group form-group">
                    <span class="input-group-addon">Описание:</span>
                    <textarea required class="form-control" name="description"></textarea>
                </div>

                <div class="input-group form-group">
                    <span class="input-group-addon">Цена (руб/мин):</span>
                    <input required type="number" min="0" step="5" class="form-control" name="cost_per_min" />
                </div>

                <div class="form-group input-group date" id="starting-time-datetimepicker">
                    <span class="input-group-addon">Время начала оказания:</span>
                    <input class="form-control" type="text" name="starting_time" value="" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>

                <script type="text/javascript">
                    $(function () {
                        $('#starting-time-datetimepicker').datetimepicker({
                            locale: 'ru',
                            format: 'LT'
                        });
                    });
                </script>

                <!--HBS-->
                <script class="hbs" type="text/x-handlebars-template">
                
                    <div class="input-group form-group">
                        <span class="input-group-addon">Отель:</span>
                        <select class="form-control" name="hotel_id">
                            @foreach (hotel h in Model.hotels)
                            {
                                <option {{#ifCond hotel_id "==" @h.id  }}selected{{/ifCond}} value="@h.id">@h.name</option>
                            }
                            <option {{#unless hotel_id }} selected{{/unless}} value="">Отсутствует</option>
                        </select>
                    </div>

                    <div class="input-group form-group">
                        <span class="input-group-addon">Описание:</span>
                        <textarea required class="form-control" name="description">{{ description }}</textarea>
                    </div>

                    <div class="input-group form-group">
                        <span class="input-group-addon">Цена (руб/мин):</span>
                        <input required type="number" min="0" step="5" class="form-control" name="cost_per_min" value="{{ cost_per_min }}"/>
                    </div>

                    <div class="form-group input-group date" id="edit-starting-time-datetimepicker">
                        <span class="input-group-addon">Время начала оказания:</span>
                        <input class="form-control" type="text" name="starting_time" value="" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>

                </script>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</form>