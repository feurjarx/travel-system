@model ControlTravelAgencySystem.Models.ViewModels.AdminPanelPageView
@using ControlTravelAgencySystem.Models

<form class="modal add-entity-modal fade" id="excursion-modal" tabindex="-1" role="dialog"
      data-entity="excursion" 
      data-create-url="/excursions/create"
      data-edit-url="/excursions/edit">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Добавление экскурсии
                    <label class="error-label bg-danger"></label>
                </h4>
            </div>

            <div class="modal-body">

                <div class="input-group form-group">
                    <span class="input-group-addon">Название:</span>
                    <input required type="text" class="form-control" name="name"/>
                </div>

                <div class="input-group form-group">
                    <span class="input-group-addon">Цена:</span>
                    <input required type="number" step="50" class="form-control" name="cost" />
                </div>

                <div class="input-group form-group">
                    <span class="input-group-addon">Описание:</span>
                    <textarea required class="form-control" name="description"></textarea>
                </div>

                <div class="form-group input-group date" id="starting-time-datetimepicker">
                    <span class="input-group-addon">Время начала:</span>
                    <input required class="form-control" type="text" name="starting_time" value="" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>

                <script type="text/javascript">
                    $(function () {
                        $('#starting-time-datetimepicker').datetimepicker({
                            locale: 'ru',
                            format: 'LT'
                        });
                    });
                </script>

                <div class="input-group form-group">
                    <span class="input-group-addon">Продолжительность экскурсии (мин):</span>
                    <input required type="number" class="form-control" name="duration" min="5" max="10080" />
                </div>

                <div class="input-group form-group">
                    <span class="input-group-addon">Город:</span>
                    <select class="form-control" name="city_id">
                        @foreach (city c in Model.cities)
                        {
                            <option value="@c.id">@c.name</option>
                        }
                        <option value="">Отсутствует</option>
                    </select>
                </div>

                <!--HBS-->
                <script class="hbs" type="text/x-handlebars-template">
                
                    <div class="input-group form-group">
                        <span class="input-group-addon">Название:</span>
                        <input required type="text" class="form-control" name="name" value="{{ name }}"/>
                    </div>

                    <div class="input-group form-group">
                        <span class="input-group-addon">Цена:</span>
                        <input required type="number" step="50" class="form-control" name="cost" value="{{ cost }}"/>
                    </div>

                    <div class="input-group form-group">
                        <span class="input-group-addon">Описание:</span>
                        <textarea required class="form-control" name="description">{{ description }}</textarea>
                    </div>

                    <div class="form-group input-group date" id="edit-starting-time-datetimepicker">
                        <span class="input-group-addon">Время начала:</span>
                        <input required class="form-control" type="text" name="starting_time" value="" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>

                    <div class="input-group form-group">
                        <span class="input-group-addon">Продолжительность экскурсии (мин):</span>
                        <input required type="number" class="form-control" name="duration" min="5" max="10080" value="{{ duration }}"/>
                    </div>

                    <div class="input-group form-group">
                        <span class="input-group-addon">Город:</span>
                        <select class="form-control" name="city_id">
                            @foreach (city c in Model.cities)
                            {
                                <option {{#ifCond city_id "==" @c.id  }}selected{{/ifCond}} value="@c.id">@c.name</option>
                            }
                            <option {{#unless city_id }}selected{{/unless}} value="">Отсутствует</option>
                        </select>
                    </div>
                    
                </script>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</form>