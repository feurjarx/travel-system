@model ControlTravelAgencySystem.Models.ViewModels.AdminPanelPageView
@using ControlTravelAgencySystem.Models

<form class="modal add-entity-modal fade modal-up" id="callout-room-modal" tabindex="-1" role="dialog"
      data-entity="callout_room" 
      data-create-url="/suggestions/create"
      data-edit-url="/suggestions/edit">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Добавление заказа на номер в отеле
                    <label class="error-label bg-danger"></label>
                </h4>
            </div>

            <div class="modal-body">

                <div class="input-group form-group">
                    <span class="input-group-addon">Номер в отеле:</span>
                    <select required class="form-control" id="room-input" name="room_id">
                        @foreach (room r in Model.rooms)
                        {
                            <option value="@r.id">В отеле @r.hotel.name комната @r.number</option>
                        }
                    </select>
                </div>

                <div class="form-group input-group date" id="start-living-at-datetimepicker">
                    <span class="input-group-addon">Дата и время заселения:</span>
                    <input required id="start-living-at-input" class="form-control" type="text" name="start_living_at" value="" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>

                <script type="text/javascript">
                    $(function () {
                        $('#start-living-at-datetimepicker').datetimepicker({
                            locale: 'ru'
                        });
                    });
                </script>

                <div class="input-group form-group">
                    <span class="input-group-addon">Продолжительность проживания (ч):</span>
                    <input required type="number" class="form-control" id="duration-input" name="duration" min="1" value="24"/>
                </div>

                <!--HBS-->
                <script class="hbs" type="text/x-handlebars-template">

                    <div class="input-group form-group">
                        <span class="input-group-addon">Номер в отеле:</span>
                        <select required class="form-control" id="room-input" name="room_id">
                            @foreach (room r in Model.rooms)
                            {
                                <option {{#ifCond room.id "==" @r.id }}selected{{/ifCond}} value="@r.id">В отеле @r.hotel.name комната @r.number</option>
                            }
                        </select>
                    </div>

                    <div class="form-group input-group date" id="edit-start-living-at-datetimepicker">
                        <span class="input-group-addon">Дата и время заселения:</span>
                        <input required id="start-living-at-input" class="form-control" type="text" name="start_living_at" value="" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>

                    <div class="input-group form-group">
                        <span class="input-group-addon">Продолжительность проживания (ч):</span>
                        <input required type="number" class="form-control" id="duration-input" name="duration" min="1" value="{{ duration }}" />
                    </div>
                    
                </script>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</form>