@model ControlTravelAgencySystem.Models.ViewModels.AdminPanelPageView
@using ControlTravelAgencySystem.Models
@*@using ControlTravelAgencySystem.Common*@

@*@RenderPage("Modals/EmployeeAddModal.cshtml")*@

<div class="panel panel-default">

    <div class="panel-heading">
        <h2>Список отелей</h2>
    </div>
    <div class="panel-body">
        <div class="space-between" id="hotels-top-panel">
            <div class="btn-group" id="hotel-add-btn" data-toggle="modal" data-target="#hotel-add-modal">
                <button class="btn btn-success">Добавить</button>
            </div>
        </div>
    </div>

    <div class="table-responsive">

        @if (Model.hotels.Count() > 0)
        {
            <table class="table table-hover" id="hotels-table">
                <thead>
                    <tr>
                        <th>Наименование</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (hotel h in Model.hotels)
                    {
                        <tr data-id="@h.id" data-name="@h.name" class="hover-box">
                            <td>@h.name</td>
                            <td>
                                <div class="btn-group hover-elem actions-group">
                                    <button class="btn btn-default btn-xs center-block btn-hotel-edit">
                                        <i class="fa fa-pencil text-warning"></i>
                                    </button>
                                    <button class="btn btn-default btn-xs center-block btn-hotel-remove">
                                        <i class="fa fa-ban text-danger"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">Отели не найдены</div>
        }
    </div>
</div>